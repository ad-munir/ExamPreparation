@{
    string[] N = { "Bakkali", "Talay", "Badr", "Torres", "Daoudi", "Yahia" };
    float[] M = { 10, 13, 9, 10.5f, 11.5f, 10 };
    float[] I = { 17, 13.5f, 8.5f, 11, 14, 13 };

    float[] Moy = new float[6];
    string[] Mention = new string[6];


    for (int i = 0; i < M.Length; ++i)
    {
        Moy[i] = (M[i] + I[i]) / 2;

        if (Moy[i] < 10)
        {
            Mention[i] = "Ajourné";
        }
        else if (Moy[i] >= 10 && Moy[i] < 12)
        {
            Mention[i] = "Passable";
        }
        else if (Moy[i] >= 12 && Moy[i] < 14)
        {
            Mention[i] = "Assez bien";
        }
        else if (Moy[i] >= 14 && Moy[i] < 16)
        {
            Mention[i] = "Bien";
        }
        else
        {
            Mention[i] = "Très bien";
        }
    }

    float somme = 0;

    float MoyMin = Moy[0];
    float MoyMax = Moy[0];

    for (int i = 0; i < M.Length; ++i)
    {
        //calcul de : moy minimale & moy maximale & la somme des moyennes

        if (Moy[i] < MoyMin)
        {
            MoyMin = Moy[i];
        }

        if (Moy[i] > MoyMax)
        {
            MoyMax = Moy[i];
        }

        somme += Moy[i];
    }
    float MoyGen = somme / Moy.Length;
}
<style>
    table{
        border:solid 1px;
    }
    td,th {
        border-top: solid 1px;
        border-left:solid 1px;
    }
    body{
        text-align:center;
    }
</style>
<body>
    <h1>Résultat de la délibération de l'examen</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Mathématiques</th>
                <th>Informatiques</th>
                <th>Moyenne</th>
                <th>Mention</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < N.Length; ++i)
            {
                <tr>
                    <td>@N[i]</td>
                    <td>@M[i]</td>
                    <td>@I[i]</td>
                    <td>@Moy[i]</td>
                    <td>@Mention[i]</td>
                </tr>
            }
        </tbody>
    </table>

    <h1>Statistique</h1>
    <table>
        <thead>
            <tr>
                <th>Moyenne minimale</th>
                <th>Moyenne maximale</th>
                <th>Moyenne générale</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@MoyMin</td>
                <td>@MoyMax</td>
                <td>@MoyGen</td>
            </tr>
        </tbody>
    </table>
</body>